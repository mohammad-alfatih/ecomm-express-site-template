<section id="single_item" class="container section-padding-xg-b">
    <div class="row text-center">
        <h2 class="section-header"><%= item.label %></h2>
    </div>
    <div id="item_details" class="row">
        <div class="col-sm-6 text-center product-list-item">
            <div id="item_details_view" class="item-view" style="background-image: url('<%= item.url %>');">
            </div>
            <div id="item_details_images">
                <ul class="item-images-list ul-inline">
                    <li class="item-image">pic 1</li>
                    <li class="item-image">pic 2</li>
                    <li class="item-image">pic 3</li>
                </ul>
            </div>
        </div>
        <div class="col-sm-6">
            <div id="item_details_name" class="item-details-section">
                <h3><%= item.label %></h3>
                <!-- <p><%= item.description %></p> -->
            </div>

            <div id="item_details_price" class="item-details-section">
                <span class="old-price"><%= item.old_price %></span>
                <span class="new-price"><%= item.new_price %></span>
            </div>

            <div id="item_details_rating" class="item-details-section">
                <h4>Ratings</h4>
                <%= render_ratings(item.rating) %>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
            </div>

            <div id="item_details_size_picker" class="item-details-section">
                <h4>Sizes</h4>
                <ul class="size-picker ul-inline">
                    <li>
                        <div class="size-item active">XS</div>
                    </li>
                    <li>
                        <div class="size-item">S</div>
                    </li>
                    <li>
                        <div class="size-item">M</div>
                    </li>
                    <li>
                        <div class="size-item">L</div>
                    </li>
                    <li>
                        <div class="size-item">XL</div>
                    </li>
                    <li>
                        <div class="size-item">XXL</div>
                    </li>
                    <li>
                        <div class="size-item disabled">XXXL</div>
                    </li>
                </ul>
            </div>

            <div id="item_details_color_picker" class="item-details-section">
                <h4>Colors</h4>
                <ul class="color-picker ul-inline">
                    <li>
                        <div class="color-item active" style="background-color: red;"></div>
                    </li>
                    <li>
                        <div class="color-item" style="background-color: blue;"></div>
                    </li>
                    <li>
                        <div class="color-item" style="background-color: green;"></div>
                    </li>
                    <li>
                        <div class="color-item" style="background-color: yellow;"></div>
                    </li>
                    <li>
                        <div class="color-item" style="background-color: purple;"></div>
                    </li>
                    <li>
                        <div class="color-item" style="background-color: beige;"></div>
                    </li>
                </ul>
            </div>

            <div id="item_details_checkout" class="item-details-section">
                <div class="row">
                    <div id="item_details_quantity_picker" class="col-sm-6">
                        <span id="quantity_down" class="quantity-button btn-sm">-</span>
                        <input class="quantity-input" type="number" value="1">
                        <span id="quantity_up" class="quantity-button btn-sm">+</span>
                    </div>
                    <div id="item_add_cart" class="col-sm-6">
                        <button class="btn btn-primary">Add to Cart</button>
                    </div>
                </div>
            </div>

            <div id="item_details_info" class="item-details-section">
                <div id="item_details_info_summary" class="item-details-info">
                    <div class="item-details-heading" data-toggle="collapse" data-target="#item_details_body_summary">
                        <h5>Summary</h5>
                        <button type="button" class="">+</button>
                    </div>
                    <div id="item_details_body_summary" class="item-details-body collapse">
                        <%= details.info.summary %>
                    </div>
                </div>
                <div id="item_details_info_features" class="item-details-info">
                    <div class="item-details-heading" data-toggle="collapse" data-target="#item_details_body_features">
                        <h5>Features</h5>
                        <button type="button" class="">+</button>
                    </div>
                    <div id="item_details_body_features" class="item-details-body collapse">
                        <div class="row">
                            <div class="col-sm-6">
                                <h5>Features</h5>
                                <ul>
                                    <% details.info.features.forEach((feature) => { %>
                                    <li><%= feature %></li>
                                    <% }) %>
                                </ul>
                            </div>
                            <div class="col-sm-6">
                                <h5>Content</h5>
                                <span><%= details.info.content %></span>
    
                                <h5>Care</h5>
                                <span><%= details.info.care %></span>
    
                                <h5>Origin</h5>
                                <span><%= details.info.origin %></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="item_details_info_shipping&Returns" class="item-details-info">
                    <div class="item-details-heading" data-toggle="collapse" data-target="#item_details_body_shipping">
                        <h5>Shipping & Returns</h5>
                        <button type="button" class="">+</button>
                    </div>
                    <div id="item_details_body_shipping" class="item-details-body collapse">
                        <div class="row">
                            <div class="col-sm-6">
                                <h6><%= details.exchange.shipping.title %></h6>
                                <span><%= details.exchange.shipping.summary %></span>
                            </div>
                            <div class="col-sm-6">
                                <h6><%= details.exchange.returns.title %></h6>
                                <span><%= details.exchange.returns.summary %></span>
                            </div>
                        </div> 
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    <div id="item_responses">
        <div id="item_responses_reviews">
                <div id="reviews_title" class="">
                    <h3 class="section-header">Reviews</h3>
                </div>
                <div id="reviews_controls" class="">
                    <button class="pull-right">Write a Review</button>
                </div>
            <div id="item_responses_reviews_list">
                <ul class="reviews-list ul-block">
                    <% details.reviews.forEach((review) => { %> 
                    <li class="review-item row">
                        <div class="col-xs-1 text-center">
                            <div class="reviewer-info-name"><%= review.username %></div>
                            <div class="reviewer-info-avatar" style="background-image: url('<%= review.avatar_url %>');"></div>
                            <img src="<%= review.avatar_url %>" alt="">
                        </div>
                        <div class="review-comment col-md-9 co-sm-12">
                            <h5 class="review-comment-title" style="margin-top: 0;"><%= review.title %></h5>
                            <div class="review-comment-text"><%= review.comment %></div>
                        </div>
                        <div class="col-md-2">
                            <div class="review-rating">
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                            </div>
                            <div class="reviewer-info-date"><%= review.date %></div>
                        </div>
                    </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
</section>